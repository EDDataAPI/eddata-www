{
  "name": "eddata-www",
  "version": "3.0.0",
  "description": "EDData Website",
  "main": "index.js",
  "scripts": {
    "start": "next start -p 3000",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:local": "cross-env EDDATA_API_BASE_URL=http://localhost:3001/api EDDATA_AUTH_BASE_URL=http://localhost:3003/auth next build",
    "postbuild": "next-sitemap",
    "dev": "next dev -p 3000 --turbo",
    "dev:no-turbo": "next dev -p 3000",
    "dev:local": "cross-env EDDATA_API_BASE_URL=http://localhost:3001/api EDDATA_AUTH_BASE_URL=http://localhost:3003/auth next dev -p 3000 --turbo",
    "dev:local:api": "cross-env EDDATA_API_BASE_URL=http://localhost:3001/api next dev -p 3000 --turbo",
    "dev:local:auth": "cross-env EDDATA_AUTH_BASE_URL=http://localhost:3003/auth next dev -p 3000 --turbo",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "clean": "rimraf .next out",
    "audit:security": "npm audit",
    "audit:fix": "npm audit fix",
    "prepare": "node -e \"try { process.env.CI || process.env.DOCKER_BUILD || require('husky').install() } catch {}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EDDataAPI/eddata-www.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/EDDataAPI/eddata-www/issues"
  },
  "homepage": "https://github.com/EDDataAPI/eddata-www#readme",
  "dependencies": {
    "@react-three/fiber": "^8.18.0",
    "byte-size": "^9.0.1",
    "critters": "^0.0.23",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "next": "^15.5.6",
    "next-sitemap": "^4.2.3",
    "rc-table": "^7.55.1",
    "react": "^18.3.1",
    "react-collapsible": "^2.10.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-tabs": "^6.1.0",
    "use-debounce": "^10.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.17.0",
    "@next/bundle-analyzer": "^15.5.6",
    "@playwright/test": "^1.56.1",
    "@sentry/nextjs": "^10.25.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "24.10.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.5.6",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "5.9.3",
    "web-vitals": "^5.1.0"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=24.0.0"
  }
}
